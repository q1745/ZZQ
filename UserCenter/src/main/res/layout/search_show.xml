<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="center"
        android:id="@+id/search_img"
        android:layout_width="130dp"
        android:layout_height="170dp"/>
    <TextView
        android:id="@+id/search_tv"
        android:textColor="#B7000000"
        android:textSize="18dp"
        android:layout_marginLeft="140dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ED2011"
        android:layout_below="@+id/search_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        android:text="￥"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ED2011"
        android:layout_below="@+id/search_tv"
        android:id="@+id/search_money"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#ED2011"
        android:textColor="#ffffff"
        android:layout_below="@+id/search_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:text="秒杀价"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/zi"
        android:gravity="center"
        android:background="#ED2011"
        android:textColor="#ffffff"
        android:layout_below="@+id/search_money"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:text="自营"
        android:textSize="20dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:background="#ED2011"
        android:textColor="#ffffff"
        android:layout_below="@+id/search_money"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:text="京东超市"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:background="@drawable/search_buyed"
        android:textColor="#DF2196F3"
        android:layout_below="@+id/zi"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="140dp"
        android:text="你买过的商品"
        android:textSize="20dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>