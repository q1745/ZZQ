<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <EditText
        android:singleLine="true"
        android:shadowColor="@color/black"
        android:background="@drawable/search_style2"
        android:textColor="#A6000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/seach_true"
        android:hint="         户外背包"
        android:layout_width="320dp"
        android:layout_height="40dp"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/search_img1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search"
        android:layout_alignTop="@id/seach_true"
        android:layout_alignBottom="@id/seach_true"
        android:layout_alignStart="@id/seach_true"
        android:layout_marginLeft="5dp"
        android:layout_alignLeft="@id/seach_true" />
    <ImageView
        android:id="@+id/search_img2"
        android:layout_alignRight="@+id/seach_true"
        android:layout_alignTop="@+id/seach_true"
        android:layout_alignBottom="@+id/seach_true"
        android:layout_marginRight="5dp"
        android:src="@drawable/phonee"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/canle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="取消"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:text="搜索发现"
        android:textSize="16dp"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@drawable/seach_style"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginTop="230dp"
        android:text="治理甘露"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rec"
        android:layout_below="@+id/seach_true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>


