<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <EditText
        android:paddingLeft="10dp"
        android:background="@drawable/ed_style"
        android:hint="输入手机号"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/login_code_user"
        android:layout_width="match_parent"
        android:layout_height="35dp"></EditText>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <EditText
            android:paddingLeft="10dp"
            android:background="@drawable/ed_style"
            android:hint="输入验证码"
            android:id="@+id/login_code_pass"
            android:password="true"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="35dp"></EditText>
        <Button
            android:textSize="13dp"
            android:id="@+id/getcode"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="45dp"></Button>
    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/code_login"
        android:text="登录"
        android:textSize="12sp"
        android:background="@drawable/btn_style"
        android:layout_width="200dp"
        android:layout_height="35dp"></Button>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/yzcode"
            android:textColor="#2196F3"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_marginHorizontal="8dp"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#777777"
            android:id="@+id/go_pass_login"
            android:text="密码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#777777"
            android:text="还没有账号？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#4CAF50"
            android:id="@+id/goreg"
            android:text="立即注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/qq"
                android:padding="20dp"
                android:src="@drawable/qqqqqq"
                android:layout_width="match_parent"
                android:layout_height="60dp"></ImageView>
            <TextView
                android:text="QQ"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/wechat"
                android:padding="15dp"
                android:src="@drawable/wwwxxx"
                android:layout_width="match_parent"
                android:layout_height="60dp"></ImageView>
            <TextView
                android:text="微信"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/sina"
                android:padding="15dp"
                android:src="@drawable/wwwbbb"
                android:layout_width="match_parent"
                android:layout_height="60dp"></ImageView>
            <TextView
                android:text="微博"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>