<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#CC1507"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/jing"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="京东"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/index_img1"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:src="@drawable/scan_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/index_img2"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/message_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <EditText
        android:background="@drawable/search_style"
        android:textColor="#A6000000"
        android:layout_below="@id/jing"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/seach"
        android:hint="         户外背包"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search"
        android:layout_alignTop="@id/seach"
        android:layout_alignBottom="@id/seach"
        android:layout_alignStart="@id/seach"
        android:layout_marginLeft="5dp"
        android:layout_alignLeft="@id/seach" />
    <ImageView
        android:layout_alignRight="@+id/seach"
        android:layout_alignTop="@+id/seach"
        android:layout_alignBottom="@+id/seach"
        android:layout_marginRight="5dp"
        android:src="@drawable/phonee"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <com.youth.banner.Banner
        android:id="@+id/ban"
        android:layout_below="@id/seach"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/index_rec"
        android:layout_margin="20dp"
        android:layout_below="@+id/ban"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:background="#4F000000"
        android:layout_below="@+id/index_rec"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/kill"
        android:layout_below="@+id/index_rec"
        android:layout_marginTop="20dp"
        android:text="京东秒杀"
        android:textColor="#CB000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/index_hour"
        android:layout_marginLeft="90dp"
        android:background="#E82213"
        android:text="8点场"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_below="@+id/index_rec"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/index_time"
        android:layout_marginLeft="146dp"
        android:background="@drawable/index_time"
        android:textColor="#E82213"
        android:textSize="18dp"
        android:layout_below="@+id/index_rec"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>